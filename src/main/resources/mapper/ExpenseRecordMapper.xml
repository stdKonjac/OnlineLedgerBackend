<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.stdkonjac.onlineledger.dao.ExpenseRecordDao">
    <select id="selectExpenseRecord"
            resultType="com.stdkonjac.onlineledger.entity.ExpenseRecord">
        select * from expense_record
        <where>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="date != null">
                and date = #{date}
            </if>
            <if test="category != null">
                and category = #{category}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
            <if test="expense != null">
                and expense = #{expense}
            </if>
            <if test="prepay != null">
                and prepay = #{prepay}
            </if>
        </where>
    </select>

    <select id="selectAllExpenseRecord"
            resultType="com.stdkonjac.onlineledger.entity.ExpenseRecord">
        select *
        from expense_record
    </select>

    <insert id="insertExpenseRecord">
        insert into expense_record
        <set>
            <if test="uid != null">
                uid = #{uid},
            </if>
            <if test="date != null">
                date = #{date},
            </if>
            <if test="category != null">
                category = #{category},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="expense != null">
                expense = #{expense},
            </if>
            <if test="prepay != null">
                prepay = #{prepay},
            </if>
        </set>
    </insert>

    <delete id="deleteExpenseRecord">
        delete from expense_record
        <where>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="date != null">
                and date = #{date}
            </if>
            <if test="category != null">
                and category = #{category}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
            <if test="expense != null">
                and expense = #{expense}
            </if>
            <if test="prepay != null">
                and prepay = #{prepay}
            </if>
        </where>
    </delete>

    <update id="updateExpenseRecord">
        update expense_record
        <set>
            <if test="date != null">
                date = #{date},
            </if>
            <if test="category != null">
                category = #{category},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="expense != null">
                expense = #{expense},
            </if>
            <if test="prepay != null">
                prepay = #{prepay},
            </if>
        </set>
        <where>
            <if test="uid != null">
                and uid = #{uid}
            </if>
        </where>
    </update>
</mapper>