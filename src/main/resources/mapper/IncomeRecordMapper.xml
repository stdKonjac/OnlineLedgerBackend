<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.stdkonjac.onlineledger.dao.IncomeRecordDao">
    <select id="selectIncomeRecord"
            resultType="com.stdkonjac.onlineledger.entity.IncomeRecord">
        select * from income_record
        <where>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="date != null">
                and date = #{date}
            </if>
            <if test="category != null">
                and category = #{category}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
            <if test="income != null">
                and income = #{income}
            </if>
            <if test="remark != null">
                and remark = #{remark}
            </if>
            <if test="ledger_book != null">
                and ledger_book = #{ledger_book}
            </if>
        </where>
    </select>

    <select id="selectAllIncomeRecord"
            resultType="com.stdkonjac.onlineledger.entity.IncomeRecord">
        select *
        from income_record
    </select>

    <insert id="insertIncomeRecord">
        insert into income_record
        <set>
            <if test="uid != null">
                uid = #{uid},
            </if>
            <if test="date != null">
                date = #{date},
            </if>
            <if test="category != null">
                category = #{category},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="income != null">
                income = #{income},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
            <if test="ledger_book != null">
                ledger_book = #{ledger_book},
            </if>
        </set>
    </insert>

    <delete id="deleteIncomeRecord">
        delete from income_record
        <where>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="date != null">
                and date = #{date}
            </if>
            <if test="category != null">
                and category = #{category}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
            <if test="income != null">
                and income = #{income}
            </if>
            <if test="remark != null">
                and remark = #{remark}
            </if>
            <if test="ledger_book != null">
                and ledger_book = #{ledger_book}
            </if>
        </where>
    </delete>

    <update id="updateIncomeRecord">
        update income_record
        <set>
            <if test="date != null">
                date = #{date},
            </if>
            <if test="category != null">
                category = #{category},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="income != null">
                income = #{income},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
            <if test="ledger_book != null">
                ledger_book = #{ledger_book},
            </if>
        </set>
        <where>
            <if test="uid != null">
                and uid = #{uid}
            </if>
        </where>
    </update>
</mapper>