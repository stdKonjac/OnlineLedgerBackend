<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.stdkonjac.onlineledger.dao.UnpaidRecordDao">
    <select id="selectUnpaidRecord"
            resultType="com.stdkonjac.onlineledger.entity.UnpaidRecord">
        select * from unpaid_record
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="value != null">
                and value = #{value}
            </if>
            <if test="date != null">
                and date = #{date}
            </if>
            <if test="remark != null">
                and remark = #{remark}
            </if>
            <if test="expense_record_id != null">
                and expense_record_id = #{expense_record_id}
            </if>
        </where>
    </select>

    <select id="selectAllUnpaidRecord"
            resultType="com.stdkonjac.onlineledger.entity.UnpaidRecord">
        select *
        from unpaid_record
    </select>

    <insert id="insertUnpaidRecord">
        insert into unpaid_record
        <set>
            <if test="id != null">
                id = #{id},
            </if>
            <if test="uid != null">
                uid = #{uid},
            </if>
            <if test="value != null">
                value = #{value},
            </if>
            <if test="date != null">
                date = #{date},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
            <if test="expense_record_id != null">
                expense_record_id = #{expense_record_id},
            </if>
        </set>
    </insert>

    <delete id="deleteUnpaidRecord">
        delete from unpaid_record
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="value != null">
                and value = #{value}
            </if>
            <if test="date != null">
                and date = #{date}
            </if>
            <if test="remark != null">
                and remark = #{remark}
            </if>
            <if test="expense_record_id != null">
                and expense_record_id = #{expense_record_id}
            </if>
        </where>
    </delete>

    <update id="updateUnpaidRecord">
        update unpaid_record
        <set>
            <if test="uid != null">
                uid = #{uid},
            </if>
            <if test="value != null">
                value = #{value},
            </if>
            <if test="date != null">
                date = #{date},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
            <if test="expense_record_id != null">
                expense_record_id = #{expense_record_id},
            </if>
        </set>
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
        </where>
    </update>

    <delete id="deleteUnpaidRecordByExpenseRecordId">
        delete from expense_record
        <where>
            <if test="expense_record_id != null">
                and expense_record_id = #{expense_record_id}
            </if>
        </where>
    </delete>
</mapper>